<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:background="#D1D1D1">



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.example.videobusiness.widget.BottomNavigationBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <com.example.videobusiness.widget.BottomItemView
            android:id="@+id/tabHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:buttonChecked="true"
            app:checkedIcon="@drawable/comui_tab_home_selected"
            app:uncheckedIcon="@drawable/comui_tab_home"
            app:buttonText="首页"
            />

        <com.example.videobusiness.widget.BottomItemView
            android:id="@+id/tabMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:buttonChecked="false"
            app:checkedIcon="@drawable/comui_tab_message_selected"
            app:uncheckedIcon="@drawable/comui_tab_message"
            app:buttonText="消息"
            />

        <com.example.videobusiness.widget.BottomItemView
            android:id="@+id/tabMine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:buttonChecked="false"
            app:checkedIcon="@drawable/comui_tab_person_selected"
            app:uncheckedIcon="@drawable/comui_tab_person"
            app:buttonText="我的"
            />

    </com.example.videobusiness.widget.BottomNavigationBar>
</androidx.constraintlayout.widget.ConstraintLayout>